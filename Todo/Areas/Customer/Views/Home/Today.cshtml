@model List<TodoEntry>

<div class="body">
    <div class="today-secition">
        <h1>Heute </h1><p>@DateTime.Now</p>
        <!--Todo make this work-->
        @{
            foreach(var item in Model.Where(todo => todo.StartDate == DateTime.Now))
            {
                <div>
                    <h5>@item.Title</h5>
                </div>
            }
        }
    </div>
    <!--Soll einen auf und zu klappen button haben der sich dreht-->
    <div class="overtime-seciton">
        <h3>Überfällig</h3>

        @{
            foreach(var item in Model.Where(todo => todo.EndDate < DateTime.Today))
            {
                <div>
                    <h5>@item.Title</h5>
                </div>
            }
        }
    </div>
    <div class="add-new-section">
        <i class="fa-solid fa-plus add-modal-button"></i><p>Aufgabe hinzufügen</p>
    </div>
</div>
